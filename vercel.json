{
  "version": 2,
  "projects": [
    {
      "src": "frontend",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" },
      "buildCommand": "npm run build",
      "outputDirectory": "build"
    },
    {
      "src": "backend/api",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/api/$1.js" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ]
}
